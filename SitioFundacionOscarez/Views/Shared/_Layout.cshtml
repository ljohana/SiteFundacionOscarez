<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fundación Oscarez</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fundación Oscarez", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Quienes somos<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nuestra Historia", "QuienesSomos", "Home")</li>
                            <li>@Html.ActionLink("Nuestra Experiencia", "NuestraExperiencia", "Home")</li>
                            <li><a href="http://www.institutooscarez.com.co/" target="_blank">Instituto Oscarez</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Qué Hacemos <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Programa Estudiantes", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Proyectos Institucionales", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Fortalecimiento Social", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Actualidad <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Noticias", "Index", "Noticias")</li>
                            <li><a href="https://issuu.com/fundacionoscarez/docs/pda_oscarez?workerAddress=ec2-52-23-209-43.compute-1.amazonaws.com" target="_blank">Portafolio</a></li>
                            <li>@Html.ActionLink("Informe Gestión", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Convocatorias", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Contactenos", "Contactanos", "Contacto")</li>
                </ul>
            </div>
        </div>
    </div>
    @if (ViewBag.IsHome == true)
    {
        <header id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <div class="fill SlideOne"></div>
                    <div class="carousel-caption">
                        <h2>Caption 1</h2>
                    </div>
                </div>
                <div class="item">
                    <div class="fill SlideTwo"></div>
                    <div class="carousel-caption">
                        <h2>Caption 2</h2>
                    </div>
                </div>
                <div class="item">
                    <div class="fill SlideThree"></div>
                    <div class="carousel-caption">
                        <h2>Caption 3</h2>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </header>
    }

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p><i class="fa fa-map-marker"></i><strong> Carrera 47 # 59-66, una cuadra arriba de la oriental Medellín - Colombia</strong></p>
                    <p><i class="fa fa-envelope"></i><strong> Email: fundacionoscarez@institutooscarez.com.co</strong></p>
                    <p><i class="fa fa-phone"></i><strong> Telefono: (574) 322-35-74 </strong></p>
                    <p><strong>Copyright &copy; Fundación Oscarez @DateTime.Now.Year</strong></p>
                </div>
            </div>
        </footer>
    </div>    
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })
    </script>
</body>
</html>
