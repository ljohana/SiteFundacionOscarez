@model SitioFundacionOscarez.Models.Proyectos

@{
    ViewBag.Title = "Programas fortalecimiento social";
    var col = 0;
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Que hacemos <small> - programas de fortalecimiento social</small></h2>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li class="active">Programas de fortalecimiento social</li>
        </ol>
    </div>
</div>

@if (@ViewBag.Error == null)
{
    if (@ViewBag.Proyectos != null)
    {
        foreach (var item in @ViewBag.Proyectos)
        {
            if (col == 0)
            {
                @:<div class="row">
            }
            <div class="col-md-4 img-portfolio">
                <a href="/Details/@item.id">
                    <img class="img-responsive img-hover" src="/Images/proyectos/@item.ImagenProyecto" alt="Proyectos/Details/@item.Titulo">
                </a>
                <h3><a href="/Details/@item.id">@item.Titulo</a></h3>
                <p style=" text-align: justify;">
                    @MvcHtmlString.Create(@item.Descripcion.Substring(0, 100)) ...
                </p>
            </div>
            if (col == 2)
            {
                @:</div>
                col = 0;
            }
            else
            {
                col++;   
            }
        }
    }
}
else
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Sr Usuario! </strong>
        <br />
        @ViewBag.Error
    </div>
}

