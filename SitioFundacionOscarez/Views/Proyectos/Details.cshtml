@model SitioFundacionOscarez.Models.Proyectos

@{
    ViewBag.Title = "Detalles del proyecto";
    var Fuente = @ViewBag.Fuente;
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Que hacemos <small> - detalles del proyecto</small></h2>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            @if (Fuente != null)
            { 
                <li><a href='@Url.Action(Fuente, "Proyectos")'>@ViewBag.Link</a></li>
            }
            <li class="active">@Model.Titulo</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <p><i class="fa fa-clock-o"></i> Fecha de publicación: @Model.FechaCreacion</p>
        <hr />
        <div class="col-lg-8 pull-left" style="padding-left: 0px; padding-bottom: 5px;">
            <img class="img-responsive" src="/Images/proyectos/@Model.ImagenProyecto" alt="@Model.Titulo" style="width: 100%; height: 400px;">
        </div>
        <div>
            <p class="lead" style="text-align: justify; font-weight: bold; font-style: italic;"><u>@Model.Titulo</u></p>
            <p class="lead" style="text-align: justify; font-weight: bold; font-style: italic;">@Model.Subtitulo</p>
            <p style="text-align: justify; font-size: 17px;">@Model.Descripcion</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @{
            if (ViewBag.Caracteristicas != null && ViewBag.Caracteristicas.Count > 0)
            {
                <p class="lead" style="text-align: justify; font-weight: bold; font-style: italic;"><u>Caracteristicas del proyecto</u></p>
                <ul>
                    @foreach (var item in ViewBag.Caracteristicas)
                    {
                        <li style="text-align: justify; font-size: 17px;">@item.Caracteristica</li>
                    }
                </ul>
            }
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @{
            if (ViewBag.Resultados != null && ViewBag.Resultados.Count > 0)
            {
                <p class="lead" style="text-align: justify; font-weight: bold; font-style: italic;"><u>Resultados</u></p>
                <ul>
                    @foreach (var item in ViewBag.Resultados)
                    {
                        <li style="text-align: justify; font-size: 17px;">@item.Resultados</li>
                    }
                </ul>
            }
        }
    </div>
</div>