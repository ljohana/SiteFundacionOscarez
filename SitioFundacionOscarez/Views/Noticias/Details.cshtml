@model SitioFundacionOscarez.Models.Noticias
@{
    ViewBag.Title = "Detalle Noticias";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Actualidad <small> - nuestras noticias</small></h2>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Noticias", "Index", "Noticias")</li>
            <li class="active">@Model.Titulo</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <p><i class="fa fa-clock-o"></i> Noticia publicada el: @Model.FechaCreacion por <strong>Fundación Oscarez</strong></p>
        <hr />
        <p class="lead" style="text-align: justify; font-weight: bold; font-style: italic;">@Model.Intro</p>
        <hr />
        <div class="col-lg-8 pull-left" style="padding-left: 0px; padding-bottom: 5px;">
            <img class="img-responsive" src="/Images/noticias/@Model.Slide" alt="@Model.Titulo" style="width: 100%; height: 400px;">
        </div>
        <div>
            <p style="text-align: justify; font-size: 17px;">@Model.Descripcion</p>
        </div>
    </div>
</div>