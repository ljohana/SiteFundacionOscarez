@model IEnumerable<SitioFundacionOscarez.Models.Noticias>

@{
    ViewBag.Title = "Ultimas noticias fundación";
    var Error = ViewBag.Error;
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Actualidad <small> - nuestras noticias</small></h2>
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li class="active">Nuestras noticias</li>
        </ol>
    </div>
</div>

@if (Error == null)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-1 text-center">
                <p>
                    <i class="fa fa-file-text fa-4x"></i>
                </p>
                <p>@item.FechaCreacion</p>
            </div>
            <div class="col-md-5">
                <img class="img-responsive img-hover" src="Images/noticias/@item.Slide" alt="@item.Titulo">
            </div>
            <div class="col-md-6">
                <h3>
                    <a href="blog-post.html">@item.Titulo</a>
                </h3>
                <p>
                    Publicado por:  <a href="#">Fundación Oscarez</a>
                </p>
                <p>@item.Intro</p>
                <a class="btn btn-primary" href="blog-post.html">Leer Más <i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <hr>
    }

}
else
{

}


